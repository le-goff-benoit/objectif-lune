<div class="actionbar">
  <div class="actionbar__titles">
    <div class="mark">
    <%= @title %>
    </div>
    <% if @key.present? %>
      <div class="actionbar__secretkey" data-controller="action" data-action="mouseover->action#show mouseout->action#hide">
        Clé d'accès: <span data-action-target="openkey"><%= @key %></span><span data-action-target="closekey">***********</span>
      </div>
    <% end %>
    <div class="actionbar__subtitle">
      <%= @subtitle %>
    </div>
  </div>
  <!-- A implémenter plus tard avec un controlleur stimulus
  <%= form_with(url: dashboard_search_path, :class => "action__searchbox") do |form| %>
    <%= form.text_field :query, :class => "searchbox__input", data: { action: "input->form-submission#search" } %>
  <% end %>
    -->
  <div class="actionbar__buttons">
  <% if @join.present? %>
      <%= button_to "Rejoindre", groups_join_path, method: :get, :class => "actionbar__button--outline", data: {turbo_frame: "modal"} %>
    <% end %>
  <% if @create.present? %>
      <%= button_to 'Créer', new_group_path, method: :get, :class => "actionbar__button", data: {turbo_frame: "modal"} %>
  <% end %>
  <% if @invitation.present? %>
      <%= button_to "Inviter", call_user_path(@object.id), method: :get, :class => "actionbar__button--outline", data: {turbo_frame: "modal"} %>
  <% end %>
    <% if @forum.present? %>
      <%= button_to "Forum", channel_path(@object.channel) , method: :get, :class => "actionbar__button--outline" %>
    <% end %>
  <% if @backpath.present? %>
      <%= button_to 'Retour', @backpath, method: :get, :class => "actionbar__button" %>
  <% end %>
    </div>
</div>
<hr class="sketch-rule">