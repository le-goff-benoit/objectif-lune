<div class="form__background">
  <%= form_with model: @contact, url: contacts_path, method: :post, local: true, :html => {:class => "form"} do |f| %>
    <div class="form__titles">
      <span class="form__title">⚠️ Comment puis-<span class="mark">je t'aider ?</span> </span>
      <span class="form__subtitle">Envoie nous un message et nous te répondrons le plus vite possible. C'est promis.</span>
      <span class="form__arrow">▾</span>
    </div>

    <div class="form__field">
      <%= f.label "Nom", :class => "form__label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "email", :class => "form__input", required: true %>
    </div>

    <div class="form__field">
      <%= f.label "Email", :class => "form__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form__input", required: true %>
    </div>

    <div class="form__field">
      <%= f.label "Message", :class => "form__label" %>
      <%= f.text_area :message, :class => "form__input", :size => "30x5", required: true %>
    </div>

    <div class="form__links">
      <%= f.submit "Envoyer mon message", :class => "form__submit" %>
      <div class="form__sublinks">
        <%= link_to "Je me connecte", new_user_session_path, :class => "form__submit--outline" %>
        <%= link_to "Je m'inscris", new_user_registration_path, :class => "form__submit--help" %>
      </div>
    </div>
  <% end %>
</div>
