<turbo-frame id="modal", target="_top">
  <div class="modal" data-controller="modal" data-action="keyup@document->modal#escClose" data-action="turbo:submit-end->modal#show">
    <button type="button" class="modal-backdrop" tabindex="-1" data-action="modal#close"></button>
    <div class="modal-window">
        <%= form_with model: @group, url: groups_invit_path, method: :post, local: true, :html => {:class => "form"} do |f| %>
          <div class="form__titles">
            <span class="form__title">Inviter un <span class="mark">membre</span> </span>
            <span class="form__subtitle">Invite tes amis à rejoindre ton groupe pour travailler ensemble</span>
            <span class="form__arrow">↓</span>
          </div>
          <%= render(ErrorRenderComponent.new(object: @group)) %>
          <div class="form__field">
            <%= f.label "Email", :class => "form__label" %>
            <%= f.text_field :email, autofocus: true, :class => "form__input", required: true %>
          </div>

          <%= f.hidden_field :id, :value => @group.id %>

          <div class="form__links">
            <%= f.submit "Inviter", :class => "form__submit", data: { turbo: "false" } %>
          </div>
        <% end %>
    </div>
  </div>
</turbo-frame>