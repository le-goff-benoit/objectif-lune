<turbo-frame id="modal">
  <div class="modal" data-controller="modal" data-action="keyup@document->modal#escClose">
    <button type="button" class="modal-backdrop" tabindex="-1" data-action="modal#close"></button>
    <div class="modal-window">
      <%= form_with model: @group, url: groups_path, method: :post, local: true, :html => {:class => "form"} do |f| %>
        <div class="form__titles">
          <span class="form__title">Création d'un <span class="mark">groupe</span> </span>
          <span class="form__subtitle">Classe, projet ou soutien, toutes les excuses sont bonnes pour se regrouper</span>
          <span class="form__arrow">↓</span>
        </div>

        <div class="form__field">
          <%= f.label "Titre", :class => "form__label" %>
          <%= f.text_field :title, autofocus: true, :class => "form__input", required: true %>
        </div>

        <div class="form__field">
          <%= f.label "Description", :class => "form__label" %>
          <%= f.text_area :description, :class => "form__input", :size => "30x5", required: true %>
        </div>

        <div class="form__links">
          <%= f.submit "Créer mon groupe", :class => "form__submit", data: { turbo: "false" } %>
        </div>
      <% end %>
    </div>

  </div>
</turbo-frame>