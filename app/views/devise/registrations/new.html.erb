<div class="form__container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form"}) do |f| %>
  <div class="form__titles">
    <span class="form__title">Bienvenue !</span>
    <span class="form__subtitle">CrÃ©er un nouveau compte en tant que <u>professeur</u> sur Objectif Lune ğŸš€</span>
    <span class="form__arrow">â–¾</span>

  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form__field">
    <%= f.label "Nom", :class => "form__label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label "Courriel", :class => "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label "Mot de passe", :class => "form__label" %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label "Confirmation", :class => "form__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form__input" %>
  </div>

  <div class="form__links">
    <%= f.submit "Je m'inscris", :class => "form__submit" %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>
