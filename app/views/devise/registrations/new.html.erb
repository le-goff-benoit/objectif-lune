<div class="form__background">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form"}) do |f| %>
  <div class="form__titles">
    <span class="form__title"><span class="mark">👋🏻 Bienvenue</span> !</span>
    <span class="form__subtitle">Créer un nouveau compte en tant que <u>professeur</u> sur Objectif Lune 🚀</span>
    <span class="form__arrow">▾</span>

  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form__field">
    <%= f.label "Nom", :class => "form__label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form__input", required: true %>
  </div>

  <div class="form__field">
    <%= f.label "Courriel", :class => "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form__input", required: true %>
  </div>

  <div class="form__field">
    <%= f.label "Mot de passe", :class => "form__label" %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "form__input", required: true %>
  </div>

  <div class="form__field">
    <%= f.label "Confirmation", :class => "form__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form__input", required: true %>
  </div>

  <div class="form__links">
    <%= f.submit "Je m'inscris", :class => "form__submit" %>
    <div class="form__sublinks">
      <%= render "devise/shared/links" %>
      <%= link_to "J'ai besoin d'aide", new_contact_path, :class => "form__submit--help" %>
    </div>
  </div>
  <% end %>
</div>
