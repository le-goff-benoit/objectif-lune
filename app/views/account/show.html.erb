<div class="container">
  <%= render(ActionbarComponent.new(title: "Mon compte")) %>
  <section>
    <div class="section__titles">
      <h2 class="section__title">Général</h2>
      <h3 class="section__subtitle">Informations principales à propos de ton compte Objectif Lune</h3>
    </div>
    <div class="section__elements">
      <div class="elements__title">
        Type
      </div>
      <div class="elements__value mark">
        <%= @user.friendly_user_type %>
      </div>
    </div>
    <div class="section__elements">
      <div class="elements__title">
        Nom
      </div>
      <div class="elements__value">
        <%= @user.name %>
      </div>
    </div>
    <div class="section__elements">
      <div class="elements__title">
        Email
      </div>
      <div class="elements__value">
        <%= @user.email %>
      </div>
    </div>
  </section>
  <section>
    <div class="section__titles">
      <h2 class="section__title">Cours</h2>
      <h3 class="section__subtitle">Inscriptions actuels aux formations suivantes</h3>
    </div>
    <div class="section__elements">
      <div class="elements__title">
        Aucune inscription actuellement...
      </div>
      <div class="elements__value">
      </div>
    </div>
  </section>
  <section>
    <div class="section__titles">
      <h2 class="section__title">Groupes</h2>
      <h3 class="section__subtitle">Inscriptions actuels aux groupes suivants</h3>
    </div>
    <% @groups.each do |group| %>
        <div class="section__elements">
          <%= button_to '❌', quit_group_path(group), :method => :delete %>
            <div class="elements__title">
              <%= link_to group_path(group) do %>
                <%= group.title %>
              <% end  %>
          </div>
            <div class="elements__value">
             <%= group.goal %>
            </div>
        </div>

  <% end %>
  </section>
</div>
