<div class="section__elements">
  <div class="elements__title">
    <%= link_to polymorphic_url(notification.linkable_type.tableize.singularize, :id => notification.linkable_id) do %>
      <%= notification.content %>
    <% end %>
  </div>
  <div class="elements__action">
    <% if !notification.view_state %>
      <%= button_to "Compris !", seen_notification_path(notification), :method => :post, :class => "pills__accept" %>
    <% end %>
  </div>
</div>