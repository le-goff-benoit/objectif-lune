<!DOCTYPE html>
<html>
  <head>
    <title>ObjectifLune</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if notice %>
      <p class="devise__notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="devise__notice"><%= alert %></p>
    <% end %>
    <%= render(HeaderComponent.new(user: current_user, is_signed_in: user_signed_in?)) %>
    <%= yield %>
    <%= turbo_frame_tag "modal" %>
    <% render(BottomMessageComponent.new) %>
  </body>
</html>
